@model ImpressoraModel;

@{
  ViewData["Title"] = "Cadastro Anydesk";
}

<link href="~/css/views/impressora/criar.css" rel="stylesheet" />

<div class="text-center">
  <h1 class="display-4">Cadastrar Impressora</h1>
</div>

<br>

<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="~/fotos/impressora/cadastro_impressora.png" class="img-fluid rounded-start" alt="...">
    </div>

    <div class="col-md-8">

      <div class="card-body" style="margin-left: 10px;">
        <div class="container px-1">
          <div class="row gy-4">

            <div class="col-6">
              <input>
            </div>

            <div class="col-6">

              <div class="p-3 border">Custom column padding

              </div>
            </div>

            <div class="col-6">
              <div class="p-3 border">Custom column padding</div>
            </div>

            <div class="col-6">
              <div class="p-3 border">Custom column padding</div>
            </div>

            <div class="col-6">
              <div class="p-3 border">Custom column padding</div>
            </div>

            <div class="col-6">
              <div class="p-3 border">Custom column padding</div>
            </div>

            <div class="col-6">
              <div class="button-row mt-auto">
            <a class="btn-back btn btn-secondary"  asp-controller="Contatos" asp-action="Index" role="button">Voltar</a>
            <button type="submit" class="btn-singup btn btn-success">Cadastrar</button>
            </div>
            </div>
            

          </div>
        </div>
      </div>
    </div>
  </div>
</div>



